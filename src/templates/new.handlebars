{{> header }}
<div class="container">
  <form action="" class="form row">
    <div class="row">
      <div class="form__field col-sm-12">
        <label for="address">Adres</label>
        <input id='address' type="text" placeholder='Korenmarkt 2, 9000 Gent' class='form__input' required>
        <span><span id='lng'>Lng</span>, <span id="lat">Lat</span></span>
      </div>
      <div class="form__field col-sm-6 col-lg-4">
        <label for="price">Prijs</label>
        <input type="number" id="price" class='form__input' required>
      </div>
      <div class="form__field col-sm-6 col-lg-4">
        <label for="deposit">Waarborg</label>
        <input type="number" id="deposit" class='form__input' required>
      </div>
      <div class="form__field col-sm-12 col-lg-4">
        <label for="type">Type</label>
        <select name="type" id="type" class='form__input' required>
          <option disabled selected>Kies een type</option>
          <option value="Kamer">Kamer</option>
          <option value="Studio">Studio</option>
        </select>
      </div>
      <div class="form__field col-sm-4">
        <label for="opp">Opp. (mÂ²)</label>
        <input type="number" id="opp" class='form__input' required>
      </div>
      <div class="form__field col-sm-4">
        <label for="verdieping">Verdieping</label>
        <input type="number" id="verdieping" class='form__input' required>
      </div>
      <div class="form__field col-sm-4">
        <label for="personen">Personen</label>
        <input type="number" id="personen" class='form__input' required>
      </div>
      <div class="form__field col-sm-6 col-lg-3">
        <label for="douche">Douche</label>
        <select name="douche" id="douche" class="form__input" required>
          <option value="ja">Ja</option>
          <option value="gedeeld">Gedeeld</option>
          <option value="nee">Nee</option>
        </select>
      </div>
      <div class="form__field col-sm-6 col-lg-3">
        <label for="toilet">Toilet</label>
        <select name="toilet" id="toilet" class="form__input" required>
          <option value="ja">Ja</option>
          <option value="gedeeld">Gedeeld</option>
          <option value="nee">Nee</option>
        </select>
      </div>
      <div class="form__field col-sm-6 col-lg-3">
        <label for="bad">Bad</label>
        <select name="bad" id="bad" class="form__input" required>
          <option value="ja">Ja</option>
          <option value="gedeeld">Gedeeld</option>
          <option value="nee">Nee</option>
        </select>
      </div>
      <div class="form__field col-sm-6 col-lg-3">
        <label for="keuken">Keuken</label>
        <select name="keuken" id="keuken" class="form__input" required>
          <option value="ja">Ja</option>
          <option value="gedeeld">Gedeeld</option>
          <option value="nee">Nee</option>
        </select>
      </div>
      <div class="form__field col-sm-12">
        <label for="meubels">Bemeubeld</label>
        <select name="meubels" id="meubels" class="form__input" required>
          <option value="ja">Ja</option>
          <option value="nee" selected>Nee</option>
        </select>
        <textarea name="meubelsBeschrijving" id="beschrijfMeubels" placeholder="Beschrijf de meubels" cols="30" rows="10" class='form__input'></textarea>
      </div>
      <div class="form__field col-sm-6">
        <label for="image">Foto</label>
        <input type="file" name="foto" id="image" disabled class=''>
      </div>
      <div class="form__field col-sm-6">
        <label for="totaal">Totaal entiteiten</label>
        <input type="number" name="" id="totaal" class="form__input" required>
      </div>
      <div class="form__field col-sm-12">
        <label for="comment">Opmerkingen</label>
        <textarea name="opmerking" id="comment" cols="30" rows="10" placeholder="Vrije ingave" class='form__input'></textarea>
      </div>
      <div class="form__field col-sm-12">
        <input type="submit" value="Toevoegen" id="addKot" class="btn btn--large btn--primary">
      </div>
      {{#if editMode}}
      <input type="hidden" id='editId' value='{{edit}}'>
      {{/if}}
    </div>
  </form>
  <a href="#/rooms/list" class='btn btn--large text-danger'>Back</a>
</div>
