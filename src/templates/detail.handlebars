{{>header}}
<div class="container container--fill">
  <div class="detail__image">
    <img src="{{ room.photo }}" alt="Bedroom">
  </div>
  <div class="detail__header">
    <div class="container container--nohead row">
      <div class="col-sm-10">
        <p class='text-light text-bold'>{{ room.directions.address }}</p>
        <p class="text-light">{{ room.info.type }} - â‚¬{{ room.price.price }}</p>
      </div>
      <div class="col-sm-2 text-secondary flex flex--center">
        {{#if fav}}
          <button class='btn text-secondary' id='delFavorite'><i class="fas fa-heart fa-2x"></i></button>
        {{else}}
          <button class='btn text-secondary' id='addFavorite'><i class="far fa-heart fa-2x"></i></button>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="detail__action">
    <div class="container container--nohead">
      {{#if ownerMode}}
      <div class="row">
        <div class="col-sm-6">
          <button class="btn btn--large text-light">Verwijder</button>
        </div>
        <div class="col-sm-6">
          <a href=""><button class="btn btn--large text-light">Bewerken</button></a>
        </div>
      </div>
      {{else}}
      <p class='text-light'>Dit kot is nog beschikbaar. <br> <a href="#/messages/{{user.id}}___{{room.info.owner}}" class='text-bold'>Stuur nu een bericht!</a></p>
      {{/if}}
    </div>
  </div>
  <div class="detail__content">
    <div class="row">
      <div class="col-sm-4">
        <h4 class="m-top-10">Info</h4>
      </div>
      <div class="col-sm-8">
        <p>{{ room.extra }}</p>
      </div>
    </div>
  </div>
</div>
{{>footer}}