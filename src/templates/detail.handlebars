{{>header}}
<div class="container container--fill">
  <div class="detail__image">
    <img src="{{ room.photo }}" alt="Bedroom">
  </div>
  <div class="detail__header">
    <div class="container container--nohead row">
      <div class="col-sm-10">
        <p class='text-light text-bold'>{{ room.directions.address }}</p>
        <p class="text-light">{{ room.info.type }}</p>
      </div>
      <div class="col-sm-2 text-secondary flex flex--center">
        <i class="far fa-heart fa-2x"></i>
        {{!-- <i class="fas fa-heart"></i> --}}
      </div>
    </div>
  </div>
  <div class="detail__content">
    <div class="row">
      <div class="col-sm-4">
        <p>Lijst met details</p>
      </div>
      <div class="col-sm-8">
        <p>{{ room.extra }}</p>
      </div>
    </div>
  </div>
</div>
{{>footer}}