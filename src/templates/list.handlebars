<div class="container container--fill filter filter--up" id="filters">
  <div class="container">
    <h1>Filters</h1>
    <form action="" class="form">
      <div class="row">
        <div class="col-sm-12">
          <p class='text-bold text-primary'>Prijs</p>
          <p>Tussen <input type="number" id="minPrice" class='form__input form__input--inline' maxlength="4"> en <input type="number" id="maxPrice" class='form__input form__input--inline' maxlength="4"> euro.</p>
        </div>
        <div class="col-sm-12">
          <p class="text-bold text-primary">Afstand</p>
          <p>Tussen <input type="number" id="minDistance" class='form__input form__input--inline' maxlength="4"> en <input type="number" id="maxDistance" class='form__input form__input--inline' maxlength="4"> km.</p>
        </div>
        <div class="col-sm-12">
          <p class="text-bold text-primary">Type</p>
          <div class="col-sm-6">
            <input type="radio" name="filterType" id="" value="Kamer"><span>Kamer</span>
          </div>
          <div class="col-sm-6">
            <input type="radio" name="filterType" id="" value="Studio"><span>Studio</span>
          </div>
        </div>
        <div class="col-sm-12">
          <p class="text-bold text-primary">Oppervlakte</p>
          <p><input type="number" id="filterArea" class='form__input form__input--inline'> m²</p>
        </div>
        <div class="col-sm-12">
          <input type="submit" value="Filter" class='btn btn--large btn--primary'>
        </div>
      </div>
    </form>
    <div class="row">
      <div class="col-sm-6">
        <button class='btn btn--large text-danger' id='cancelFilter'>Cancel</button>
      </div>
    </div>
  </div>
</div>
{{> header }}
<div class="container">
  <h1>{{ title }}</h1>
  <div class="row">
    <div class="col-sm-12">
      {{#if owner}}
        <a class='btn btn--primary text-light' href="#/rooms/new">Nieuw</a>
      {{/if}}
        <button class='btn btn--primary' id='filterBtn'>Filter</button>
    </div>
  </div>
  <div class="row">
    {{#each studentRooms}}
      <div class="col-sm-12 col-md-6">
        <a href="#/rooms/{{this.room_id}}" data-navigo>
          <div class="card">
            <div class="card__image">
              <img src="{{this.photo}}" alt="">
            </div>
            <div class="card__header">
              <h5 class='card__title'>{{this.directions.address}}</h5>
            </div>
            <div class="card__content">
              <p><span class='text-secondary'>{{this.info.type}}</span> - <span class='text-bold'>€{{this.price.price}}</span></p>
              <p>{{this.extra}}</p>
            </div>
            {{#if this.isOwner}}
            <div class="card__actions row">
              <div class="col-sm-6">
                <button class="btn btn--large btn--danger">Delete</button>
              </div>
              <div class="col-sm-6">
                <button class="btn btn--large">Edit</button>
              </div>
            </div>
            {{/if}}
          </div>
        </a>
      </div>
    {{else}}
    <div class="col-sm-12">
      <p>Helaas, er zijn op dit moment geen beschikbare kamers.</p>
    </div>
    {{/each}}
  </div>
</div>
{{> footer }}