{{> header }}
<header class="row flex flex--center primary">
  <div class="col-sm-8 text--center">
    <div class="user-icon">
      <img src="{{usericon}}" alt="User Icon">
    </div>
    <h4 class="text-light">{{user.first_name}} {{user.last_name}}</h4>
  </div>
</header>
<section class="container">
  <div class="text--center">
    <p class='text-secondary text--capitalize'>
      {{#if student}}
      <i class="fas fa-graduation-cap"></i>
      {{else}}
      <i class="fas fa-building"></i>
      {{/if}}
      {{user.type}}</p>
  </div>
  <div class="row">
    {{#if student}}
    <div class="col-sm-12 col-md-6">
      <a href="#/favorites"><button class='btn btn--large btn--primary'>Favorieten</button></a>
    </div>
    {{/if}}
    <div class="col-sm-12 {{#if student}}col-md-6{{/if}}">
      <a href="#/messages"><button class='btn btn--large btn--secondary'>Berichten</button></a>
    </div>
  </div>
</section>
{{> footer }}